#!/usr/bin/env python

import os
import sys

config_map = {}

def map_config(source_dir, site_config):
    global config_map
    source_dir = os.path.realpath(source_dir)
    source_dir = os.path.normcase(source_dir)
    site_config = os.path.normpath(site_config)
    config_map[source_dir] = site_config

# Variables configured at build time.
llvm_source_root = "/home/enigma/llvm"
llvm_obj_root = "/home/enigma/build"

# Make sure we can find the lit package.
sys.path.insert(0, os.path.join(llvm_source_root, 'utils', 'lit'))

# Set up some builtin parameters, so that by default the LLVM test suite
# configuration file knows how to find the object tree.
builtin_parameters = { 'build_mode' : "." }


map_config('/home/enigma/llvm/projects/libcxx/test/lit.cfg', '/home/enigma/build/projects/libcxx/test/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/builtins/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/builtins/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/builtins/Unit/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/builtins/Unit/X86_64LinuxConfig/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/cfi/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/cfi/Standalone-x86_64/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/cfi/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/cfi/Devirt-x86_64/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/cfi/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/cfi/Standalone-thinlto-x86_64/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/cfi/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/cfi/Devirt-thinlto-x86_64/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/fuzzer/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/fuzzer/X86_64LinuxConfig/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/asan/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/asan/X86_64LinuxConfig/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/asan/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/asan/X86_64LinuxDynamicConfig/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/dfsan/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/dfsan/X86_64Config/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/msan/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/msan/X86_64/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/tsan/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/tsan/X86_64Config/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/safestack/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/safestack/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/esan/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/esan/X86_64Config/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/scudo/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/scudo/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/scudo/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/scudo/X86_64LinuxConfig/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/profile/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/profile/Profile-x86_64/lit.site.cfg')
map_config('/home/enigma/llvm/projects/compiler-rt/test/xray/lit.cfg', '/home/enigma/build/projects/compiler-rt/test/xray/X86_64LinuxConfig/lit.site.cfg')
map_config('/home/enigma/llvm/tools/clang/test/lit.cfg.py', '/home/enigma/build/tools/clang/test/lit.site.cfg.py')
map_config('/home/enigma/llvm/tools/clang/test/Unit/lit.cfg.py', '/home/enigma/build/tools/clang/test/Unit/lit.site.cfg.py')
map_config('/home/enigma/llvm/tools/lld/test/lit.cfg.py', '/home/enigma/build/tools/lld/test/lit.site.cfg.py')
map_config('/home/enigma/llvm/tools/lld/test/Unit/lit.cfg.py', '/home/enigma/build/tools/lld/test/Unit/lit.site.cfg.py')
map_config('/home/enigma/llvm/utils/lit/tests/lit.cfg', '/home/enigma/build/utils/lit/lit.site.cfg')
map_config('/home/enigma/llvm/test/lit.cfg.py', '/home/enigma/build/test/lit.site.cfg.py')
map_config('/home/enigma/llvm/test/Unit/lit.cfg.py', '/home/enigma/build/test/Unit/lit.site.cfg.py')

builtin_parameters['config_map'] = config_map

if __name__=='__main__':
    from lit.main import main
    main(builtin_parameters)
